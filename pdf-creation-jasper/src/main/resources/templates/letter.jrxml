<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
                  http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="letter"
              pageWidth="595" pageHeight="842"
              columnWidth="453" leftMargin="71" rightMargin="71"
              topMargin="71" bottomMargin="71">

    <style name="Default" isDefault="true" fontName="DejaVu Sans" fontSize="11"/>

    <parameter name="recipientName" class="java.lang.String"/>
    <parameter name="recipientStreet" class="java.lang.String"/>
    <parameter name="recipientCity" class="java.lang.String"/>
    <parameter name="date" class="java.lang.String"/>
    <parameter name="subject" class="java.lang.String"/>
    <parameter name="bodyText" class="java.lang.String"/>
    <parameter name="showNotice" class="java.lang.Boolean"/>
    <parameter name="noticeText" class="java.lang.String"/>
    <parameter name="qrCodeBase64" class="java.lang.String"/>
    <parameter name="senderName" class="java.lang.String"/>
    <parameter name="termsText" class="java.lang.String"/>
    <parameter name="showDisclaimer" class="java.lang.Boolean"/>
    <parameter name="disclaimerText" class="java.lang.String"/>
    <parameter name="contactInfo" class="java.lang.String"/>

    <pageHeader>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="453" height="15" forecolor="#666666"/>
                <textElement textAlignment="Center">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA["ACME GmbH \u2014 Vertraulich"]]></textFieldExpression>
            </textField>
        </band>
    </pageHeader>

    <detail>
        <band height="560" splitType="Stretch">
            <!-- Company Header -->
            <textField>
                <reportElement x="0" y="0" width="453" height="25" forecolor="#003366"/>
                <textElement>
                    <font size="16" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["ACME GmbH"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="25" width="453" height="12" forecolor="#666666"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA["Innovationsweg 10 | 80339 Muenchen | Deutschland"]]></textFieldExpression>
            </textField>
            <line>
                <reportElement x="0" y="40" width="453" height="1" forecolor="#003366"/>
                <graphicElement>
                    <pen lineWidth="2.0"/>
                </graphicElement>
            </line>

            <!-- Address Block -->
            <textField>
                <reportElement x="0" y="70" width="300" height="16"/>
                <textFieldExpression><![CDATA[$P{recipientName}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="86" width="300" height="16"/>
                <textFieldExpression><![CDATA[$P{recipientStreet}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="102" width="300" height="16"/>
                <textFieldExpression><![CDATA[$P{recipientCity}]]></textFieldExpression>
            </textField>

            <!-- Date -->
            <textField>
                <reportElement x="0" y="135" width="453" height="16"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$P{date}]]></textFieldExpression>
            </textField>

            <!-- Subject -->
            <textField>
                <reportElement x="0" y="165" width="453" height="20"/>
                <textElement>
                    <font size="12" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{subject}]]></textFieldExpression>
            </textField>

            <!-- Body Text -->
            <textField isStretchWithOverflow="true">
                <reportElement x="0" y="200" width="453" height="40"/>
                <textElement textAlignment="Justified"/>
                <textFieldExpression><![CDATA[$P{bodyText}]]></textFieldExpression>
            </textField>

            <!-- Notice Block (conditional) -->
            <textField isStretchWithOverflow="true">
                <reportElement x="0" y="260" width="453" height="30" forecolor="#CC6600">
                    <printWhenExpression><![CDATA[$P{showNotice}]]></printWhenExpression>
                </reportElement>
                <box padding="10">
                    <pen lineWidth="1.0" lineColor="#CC6600"/>
                </box>
                <textElement>
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{noticeText}]]></textFieldExpression>
            </textField>

            <!-- QR Code Image -->
            <image>
                <reportElement x="0" y="310" width="150" height="150"/>
                <imageExpression><![CDATA[new java.io.ByteArrayInputStream(java.util.Base64.getDecoder().decode($P{qrCodeBase64}))]]></imageExpression>
            </image>

            <!-- Sender Area -->
            <textField>
                <reportElement x="0" y="480" width="300" height="16"/>
                <textFieldExpression><![CDATA["Mit freundlichen Gruessen,"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="510" width="300" height="16"/>
                <textFieldExpression><![CDATA[$P{senderName}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="526" width="300" height="16"/>
                <textFieldExpression><![CDATA["Geschaeftsfuehrerin, ACME GmbH"]]></textFieldExpression>
            </textField>

            <break>
                <reportElement x="0" y="559" width="453" height="1"/>
            </break>
        </band>

        <!-- Page 2: Terms and Conditions -->
        <band height="400" splitType="Stretch">
            <!-- Appendix Heading -->
            <textField>
                <reportElement x="0" y="10" width="453" height="25" forecolor="#003366"/>
                <textElement>
                    <font size="14" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Anhang / Zusatzinformationen"]]></textFieldExpression>
            </textField>
            <line>
                <reportElement x="0" y="36" width="453" height="1" forecolor="#003366"/>
            </line>

            <!-- Terms Text -->
            <textField isStretchWithOverflow="true">
                <reportElement x="0" y="50" width="453" height="40"/>
                <textElement textAlignment="Justified">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{termsText}]]></textFieldExpression>
            </textField>

            <!-- Disclaimer Block (conditional) -->
            <textField isStretchWithOverflow="true">
                <reportElement x="0" y="110" width="453" height="30" forecolor="#555555">
                    <printWhenExpression><![CDATA[$P{showDisclaimer}]]></printWhenExpression>
                </reportElement>
                <box padding="10">
                    <pen lineWidth="1.0" lineColor="#999999"/>
                </box>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{disclaimerText}]]></textFieldExpression>
            </textField>

            <!-- Contact Info -->
            <textField>
                <reportElement x="0" y="170" width="453" height="16" forecolor="#666666"/>
                <box topPadding="8">
                    <topPen lineWidth="1.0" lineColor="#CCCCCC"/>
                </box>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{contactInfo}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <pageFooter>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="453" height="15" forecolor="#666666"/>
                <textElement textAlignment="Center">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA["Seite " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

</jasperReport>
